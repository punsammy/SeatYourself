
<h1>Reservations#index</h1>
<p>Find me in app/views/reservations/index.html.erb</p>

<% if @user.reservations.size == 0 %>
  <p> You have no reservations.</p>
<% else %>

  <table class="homepage">
    <% @user.reservations.order(:time).each do |reservation| %>
    <tr>
      <th>Restaurant:</th><th>Time</th><th>Party size</th><th></th><th></th>
    </tr>
      <td><%= reservation.restaurant.name %></td>
      <td><%= reservation.local_time %></td>
      <td><%= reservation.party_size %></td>
      <td><%= link_to "Edit Reservation", edit_reservation_path(reservation) %></td>
      <td><%= link_to "Cancel Reservation", reservation, method: :delete %></td>
    </tr>
    <% end %>
  </table>

<% end %>

<%= link_to "Make a reservation", new_reservation_path %>
