<h1>Reservations#edit</h1>
<p>Find me in app/views/reservations/edit.html.erb</p>
<div class="homepage">
<% if @reservation.errors.any? %>
  <p>I'm sorry. We can't change your reservation because:</p>
  <ul class="errors">
    <% @reservation.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @reservation do |reservation| %>


  <%= reservation.label :party_size %>
  <%= reservation.number_field :party_size %>
  <br>
  <%= reservation.label :time %>
  <%= reservation.datetime_select :time, discard_minute: true,
                                         start_hour: @min_hour,
                                         end_hour: @max_hour,
                                         ampm: true,
                                         default: @earliest %>

  <%= submit_tag "| Make Reservation |" %>

<% end %>
</div>
