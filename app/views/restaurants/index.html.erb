 <h1>Restaurants</h1>

 <% @restaurants.each do |restaurant| %>
   <a class="restaurants-link" href="/restaurants/<%= restaurant.id %>">
     <div class="all-restaurants">
       <h2><%= restaurant.name %></h1>
       <p><%= restaurant.address %></p>
       <p><%= restaurant.description %></p>
     </div>
   </a>
 <% end %>


